@model habonapp.Models.Student

@{ ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LoginLayout.cshtml"; }

<form style="margin-left:750px; margin-right:700px;" class="form-signin" action="/Student/Index" method="post">

    <div class="text-center mb-4">
        <img class="mb-4" src="~/Content/images/calander.png" alt="" width="72" height="72">
        <a class="h1 mb-3 font-weight-normal textColor" href="@Url.Action("Index", "Home")">Appointment</a>
    </div>
    <div class="form-label-group">
        <input type="text" name="id" class="form-control" placeholder="text" required>
        <label class="textColor" for="inputText">Student ID</label>
    </div>
    <div class="form-label-group">
        <input type="text" name="firstname" class="form-control" placeholder="text" required>
        <label class="textColor" for="inputText">First Name</label>
    </div>
    <div class="form-label-group">
        <input type="text" name="lastname" class="form-control" placeholder="text" required>
        <label class="textColor" for="inputText">Last Name</label>
    </div>
    <div class="form-label-group">
        <input type="email" name="email" class="form-control" placeholder="Email address" required autofocus>
        <label class="textColor" for="inputEmail">Email address</label>
    </div>

    <div class="checkbox mb-3">
        <label class="textColor">
            <input type="checkbox" value="remember-me">Remember me
        </label>
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
    <p class="mt-5 mb-3 text-muted text-center">&copy; Easyyyyy</p>

    @if ((string)TempData["Added"] == "Added")
    {
    <div>
    <a style="text-decoration: none; color: white; padding:88px;" class="h3 mb-3 font-weight-normal textColor"> Successful signin</a>
    </div>}

</form>


